<form method="post" action="{{ path('admin_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="w-full cursor-pointer flex justify-center mt-3 bg-primary-red rounded-lg px-6 py-3 text-white font-bold hover:opacity-80 transition-opacity duration-300">Supprimer</button>
</form>