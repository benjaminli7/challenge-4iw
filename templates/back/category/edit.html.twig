{% extends 'base_back.html.twig' %}

{% block title %}
    B&B - Edition de la catégorie {{ category.name }}
{% endblock %}

{% block body %}
    <h1 class="title-back">
        Editer la catégorie {{ category.name }}
    </h1>

    {{
        include(
            'back/category/_form.html.twig',
            {
                button_label: 'Mettre à jour'
            }
        )
    }}

    <div class="cursor-pointer flex justify-center mt-3 bg-primary-red rounded-lg px-6 py-3 text-white font-bold hover:opacity-80 transition-opacity duration-300;">
        {{ include('back/category/_delete_form.html.twig') }}
    </div>

    <div class="mt-5">
        <a href="{{ path('admin_app_menu') }}"
            class="flex items-center gap-2 font-bold">
            <i class="fa-solid fa-angle-left"></i>Retourner au menu
        </a>
    </div>
{% endblock %}
