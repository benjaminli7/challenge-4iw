{% extends 'base_back.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des contacts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Sujet</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.name }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.subject }}</td>
                    <td>{{ contact.createdAt|date('d/m/Y H:i') }}</td>
                    <td><a href="{{ path('admin_contact_show', { 'id': contact.id }) }}">Voir</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun contact pour le moment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
