{% extends 'base_back.html.twig' %}

{% block body %}
    <h1>Dashboard</h1>
    <div class="row">
        <div class="col-md-6">
            <canvas id="sales-chart" style="height: 50vh;"></canvas>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Best Seller Article</h5>
                </div>
                <div class="card-body">
                    <p>Here you can display the best seller article or any other relevant information.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script>
        // récupérer les données de vente passées par le contrôleur
        const salesByMonth = {{ sales_by_month|json_encode()|raw }};

        // créer un tableau de labels (mois) et de valeurs (ventes)
        const labels = Object.keys(salesByMonth);
        const values = Object.values(salesByMonth);

        // créer un graphique en barres avec Chart.js
        const chart = new Chart('sales-chart', {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Chiffre d\'affaires mensuel',
                    data: values ,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
{% endblock %}
